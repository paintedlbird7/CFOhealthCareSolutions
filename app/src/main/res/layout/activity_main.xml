<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cfohealthcaresolutions.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/cfologo" />



    <Button
        android:id="@+id/buttonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="servicesButton"
        android:text="Recent Projects"
        android:layout_below="@+id/buttonButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/buttonButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="servicesButton"
        android:text="Practice Areas"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />



    <TextView
        android:text="Ignacio Perez"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33sp"
        android:fontFamily="helvetica"
        android:padding="10dp"
        android:layout_marginTop="139dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:text="38 N Almaden Blvd., Suite 316"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:text="San Jose, CA 95126"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_above="@+id/imageButton2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />





    <ImageButton
        android:id="@+id/imageButton"
        android:text="14086935351"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:autoLink="phone"
        android:linksClickable="true" />

    <!--<TextView-->
    <!--android:id="@+id/phoneNumber"-->
    <!--android:autoLink="phone"-->
    <!--android:linksClickable="true"-->
    <!--android:text="+14086935351"-->
    <!--/>-->

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/email"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="sendEmail"
        android:text="@string/send_to_email"/>



    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="sendWeb"
        android:text="@string/send_to_web"/>

</RelativeLayout>
